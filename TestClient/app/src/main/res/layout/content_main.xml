<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.chevy0802.testclient.PhoneClientActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:id="@+id/layout1">
        <TextView
            android:text="IP Address : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_ipaddr"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:text="127.0.0.1"
            android:id="@+id/text_ipaddr"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
        <TextView
            android:text="Port : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_port"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="2060"
            android:id="@+id/text_port"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true" android:id="@+id/layout2">
        <TextView
            android:text="Username : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_username"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="H123223323"
            android:id="@+id/text_username"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
        <TextView
            android:text="Group : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_group"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="YDH01002"
            android:id="@+id/text_group"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_below="@+id/layout2"
        android:layout_alignParentStart="true" android:layout_marginTop="18dp" android:id="@+id/layout3">
        <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_start" android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
        <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_stop" android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_below="@+id/layout3"
        android:layout_centerHorizontal="true" android:layout_marginTop="15dp" android:id="@+id/layout4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/title_message" android:layout_weight="1"
            android:text="messages"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_below="@+id/layout4"
        android:layout_centerHorizontal="true" android:layout_marginTop="13dp" android:id="@+id/layout5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/text_messages" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>